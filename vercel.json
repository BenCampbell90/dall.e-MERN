{
  "version": 2,
  "builds": [
    { "src": "client/**", "use": "@vercel/static" },
    { "src": "server/**", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/api/v1/post/(.*)",
      "dest": "/server/api/v1/post/$1"
    },
    {
      "src": "/api/v1/dalle/(.*)",
      "dest": "/server/api/v1/dalle/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
